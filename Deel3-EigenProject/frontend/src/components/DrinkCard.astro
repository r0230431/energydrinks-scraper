---
import { EnergyDrink } from "../models/energyDrink"
import Badge from "./Badge.astro";
const drink: EnergyDrink = Astro.props.energyDrink;
const iconHTML: string = `<svg class="w-6 h-6 text-gray-800 dark:text-white" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewBox="0 0 24 24">
  <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 12c.263 0 .524-.06.767-.175a2 2 0 0 0 .65-.491c.186-.21.333-.46.433-.734.1-.274.15-.568.15-.864a2.4 2.4 0 0 0 .586 1.591c.375.422.884.659 1.414.659.53 0 1.04-.237 1.414-.659A2.4 2.4 0 0 0 12 9.736a2.4 2.4 0 0 0 .586 1.591c.375.422.884.659 1.414.659.53 0 1.04-.237 1.414-.659A2.4 2.4 0 0 0 16 9.736c0 .295.052.588.152.861s.248.521.434.73a2 2 0 0 0 .649.488 1.809 1.809 0 0 0 1.53 0 2.03 2.03 0 0 0 .65-.488c.185-.209.332-.457.433-.73.1-.273.152-.566.152-.861 0-.974-1.108-3.85-1.618-5.121A.983.983 0 0 0 17.466 4H6.456a.986.986 0 0 0-.93.645C5.045 5.962 4 8.905 4 9.736c.023.59.241 1.148.611 1.567.37.418.865.667 1.389.697Zm0 0c.328 0 .651-.091.94-.266A2.1 2.1 0 0 0 7.66 11h.681a2.1 2.1 0 0 0 .718.734c.29.175.613.266.942.266.328 0 .651-.091.94-.266.29-.174.537-.427.719-.734h.681a2.1 2.1 0 0 0 .719.734c.289.175.612.266.94.266.329 0 .652-.091.942-.266.29-.174.536-.427.718-.734h.681c.183.307.43.56.719.734.29.174.613.266.941.266a1.819 1.819 0 0 0 1.06-.351M6 12a1.766 1.766 0 0 1-1.163-.476M5 12v7a1 1 0 0 0 1 1h2v-5h3v5h7a1 1 0 0 0 1-1v-7m-5 3v2h2v-2h-2Z"/>
</svg>`
---

<div class="bg-indigo-300 w-full md:w-1/2 lg:w-1/3 xl:w-1/4 p-6 rounded-base shadow-lg hover: text-gray-800 transition-colors duration-300 flex flex-col flex-grow min-w-[250px] max-w-[300px] drinkCard" data-brand={drink.brand?.toUpperCase()}>
    <div class="flex justify-between mb-4">
            <Badge icon={iconHTML} text={drink.store} color="green" textColor="white" />
            {drink.promo &&
            <Badge text="PROMO" color="yellow" textColor="black" />
            }
    </div>

    <div class="flex justify-center">
        <img class="w-[200px] h-[200px] object-contain rounded-base bg-white shadow-xl dark:shadow-gray-800" src={drink.imageUrl} alt="" />
    </div>
    <h5 class="mt-6 mb-2 text-2xl text-gf-brand font-semibold tracking-tight text-heading">{drink.name}</h5>
    <ul class="max-w-md space-y-1 text-black list-inside mb-10"> 
        <li>
            <span class="font-bold">Volume:</span>&nbsp;{drink.volumeInLiter?.toLocaleString()} l
        </li>
        <li>
            <span class="font-bold">Prijs per liter:</span>&nbsp;&euro;&nbsp;{drink.priceInEurPerLiter?.toLocaleString()} / liter
        </li>
        {drink.promo &&
            <li>
                <span class="font-bold">Promo:</span>&nbsp;{drink.promo}
            </li>}
    </ul>
    <div class="flex justify-center mt-auto">
        <a href={drink.url} target="_blank" class="inline-flex items-center text-white bg-pink-500 box-border hover:bg-green-300 hover:text-body shadow-xs font-medium leading-5 rounded-base text-sm px-4 py-2.5 focus:outline-none">
            Meer info
            <svg class="w-4 h-4 ms-1.5 rtl:rotate-180 -me-0.5" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewBox="0 0 24 24"><path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 12H5m14 0-4 4m4-4-4-4"/></svg>
        </a>
    </div>
</div>
